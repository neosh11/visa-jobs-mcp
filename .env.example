# Path to sponsorship company dataset (CSV)
# Canonical dataset path
VISA_COMPANY_DATASET_PATH=/workspace/data/companies.csv

# Job sites (currently only linkedin is supported)
VISA_JOB_SITES=linkedin

# Use USA for Indeed unless you need another supported country code
VISA_INDEED_COUNTRY=USA

# DOL OFLC performance page used to discover latest LCA/PERM disclosure files
VISA_DOL_PERFORMANCE_URL=https://www.dol.gov/agencies/eta/foreign-labor/performance

# Internal pipeline storage
VISA_DOL_RAW_DIR=data/raw/dol
VISA_DOL_MANIFEST_PATH=data/pipeline/last_run.json

# Persistent user preference storage
VISA_USER_PREFS_PATH=data/config/user_preferences.json
